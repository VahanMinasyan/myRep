@{
    ViewBag.Title = "Index";
}

<form id="newStoryForm" method="post" action="/NewStory/CreateStory">
    <input name="title" type="text" placeholder="Story title" />
    <br />
    <textarea name="description" placeholder="Story Description"></textarea>
    <br />
    <textarea name="content" placeholder="Story Content"></textarea>
    <br />

    <select name="groupId">
        <option value="1">Group 1</option>
        <option value="2">Group 2</option>
        <option value="3">Group 3</option>
        <option value="4">Group 4</option>
        <option value="5">Group 5</option>
    </select>
    <br />

    <button type="submit" onclick="createStory()">Submit</button>
</form>